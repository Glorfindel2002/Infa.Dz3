#include <iostream>
#include <algorithm>
#include <functional>
using namespace std;

 
int main()
{
    cout << "Введите количество элементов массива: ";
    int n;
    cin >> n;
    cout << "Введите массив: ";
    int a[n];

    for (int i = 0; i < n; i++)
    {
        cin >> a[i];
    }

    sort(a, a+n, [](int x, int y) {
        return x < y;
    });
    cout << "По возрастанию: ";
    for (int i = 0; i < n; i++)
    {
        cout << a[i] << " ";
    }
    cout << endl;

    sort(a, a+n, [](int x, int y) {
        return x > y;
    });
    cout << "По убыванию: ";
    for (int i = 0; i < n; i++)
    {
        cout << a[i] << " ";
    }

    return 0;
}
